{
  "manifest_version": 3,
  "name": "Better Twitter Layout",
  "version": "0.1.0",
  "author": "Reihera",
  "developer": {
    "name": "Reihera",
    "url": "https://github.com/reihera/BetterTwitterLayout"
  },
  "description": "Attempts to de-muskify the Twitter layout.",

  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["BTL.js"],
      "css": ["style.css"]

    }
  ],
  "action": {
  "default_icon": {
    "16": "icons/16.png",
    "32": "icons/32.png"
    },
    "default_title": "fuck you"
},

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "58.0"
  }
}
}
